{
  "name": "vehicle-mileage-tracker",
  "version": "3.0.0",
  "description": "Vehicle Mileage Tracking & Fleet Management System â€” Production Backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "start:legacy": "node server/index.js",
    "dev:legacy": "node --watch server/index.js",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:push": "npx prisma db push",
    "db:seed": "node prisma/seed.js",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && prisma db push --skip-generate"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": ["fleet", "vehicle", "mileage", "tracking", "enterprise"],
  "author": "Ghana Gas",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sql.js": "^1.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "prisma": "^6.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
